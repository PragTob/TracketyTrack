<%= render 'header', travis_repo: @travis_repo, page: @page %>

<div class="row">
   <% if current_project.has_current_sprint? %>
    <%= render 'stop_sprint_button' %>
  <% end %>
  <div id="box_current_sprint" class="span8 userstory_box">
   <%= render 'box_header', title: "CURRENT SPRINT" %>
   <% if current_project.has_current_sprint? %>
    <div class="user_stories_container">
      <%= render 'current_sprint_user_stories',
                  user_stories_current_sprint: @user_stories_current_sprint %>
    </div>
    <% else %>
        <div class="user_stories_container">
          <div class="start_sprint">There is no current sprint. <strong>Please start a new one!</strong><br />
          <%= button_to "Start Sprint", new_sprint_url, method: "get", class: 'btn success btn_margin_top' %></div>
        </div>
    <% end %>
    <%= render 'box_footer' %>
  </div>

  <div id="box_backlog" class="span8 userstory_box">
    <%= render 'box_header', title: "BACKLOG" %>
    <div class="user_stories_container">
      <%= render 'backlog_user_stories', user_stories_in_backlog: @user_stories_in_backlog %>
    </div>
    <%= render 'box_footer' %>
  </div>

</div>

<%= render 'user_stories/new_box', user_story: @user_story %>

