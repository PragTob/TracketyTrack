<%= form_for(:session, :url => sessions_path) do |f| %>
  <fieldset class="login">
    <legend>Please enter your user credentials</legend>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Sign in", :class => 'btn primary' %>
    </div>

  </fieldset>
<% end %>

