<h1>Listing user_stories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Priority</th>
    <th>Estimation</th>
    <th></th>
    <th></th>
  </tr>

<% @user_stories.each do |user_story| %>
  <tr>
    <td><%= link_to user_story.name, user_story %></td>
    <td><%= user_story.status %></td>
    <td><%= user_story.priority %></td>
    <td><%= user_story.estimation %></td>
    <td><%= link_to 'Edit', edit_user_story_path(user_story) %></td>
    <td><%= link_to 'Delete', user_story, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

