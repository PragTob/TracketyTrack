<p>
  <b>Name:</b>
  <%= @user_story.name %>
</p>

<p>
  <b>Description:</b>
  <%= @user_story.description %>
</p>

<p>
  <b>Acceptance criteria:</b>
  <%= @user_story.acceptance_criteria %>
</p>

<p>
  <b>Priority:</b>
  <%= @user_story.priority %>
</p>

<p>
  <b>Estimation:</b>
  <%= @user_story.estimation %>
</p>

<p>
  <b>Work Effort:</b>
  <%= @user_story.printable_work_effort %>
</p>

<p>
  <b>Assignees:</b>
  <% if @user_story.users.empty? %>
    No user assigned
  <% else %>
    <%= @user_story.users.map(&:name).join(', ') %>
  <% end %>
</p>

<%= button_to 'Edit', edit_user_story_path(@user_story),
              class: "btn primary", method: :get %>
<%= button_to 'All user stories', user_stories_path,
              class: "btn primary", method: :get %>

