<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <div class="alert-message block-message error">
      <h4><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
      <% project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <br />
  <% end %>

  <div class="clearfix">
    <%= f.label :title, "Title*" %>
    <div class="input">
      <%= f.text_field :title, :class => 'span6' %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_area :description, :class => 'span6 description' %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :repository_url %>
    <div class="input">
      <%= f.text_field :repository_url, :class => 'span6' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
  </div>
<% end %>

